<div class="d-flex align-items-center justify-content-between">
  <h1>Twitter Account</h1>
  <%= button_to "Connect a twitter account" , "/auth/twitter", method: :post, class: "btn btn-primary"%>
</div>

<% @twitter_accounts.each do |t|%>
  <div class = "d-flex align-items-center mb-4">
    <div class="me-4">
      <%= image_tag t.image, class: "rounded-circle"%>
      <%= link_to "@#{t.name}","https://twitter.com/#{t.username}", target: :__blank%>
    </div>
    <%= button_to "Disconnect" , t , method: :delete, data: {confirm: "Are you sure?"},class: "btn btn-danger"%>
  </div>
<%end%>
